// @flow

type Period = string;

type Range = {|
  end: string,
  start: string,
|};

type Unit = 'day' | 'week' | 'month' | 'quarter' | 'year';

type PeriodLastParams = {|
  including_current: boolean,
  includingParam: string,
  num: number,
  type: 'last',
  unit: Unit,
|};

type PeriodThisParams = {|
  type: 'this',
  unit: Unit,
|};

type PeriodTillYesterdayParams = {|
  start: string,
  type: 'till_yesterday',
|};

type PeriodCustomParams = {|
  end: string,
  start: string,
  type: 'custom',
|};

type PeriodYesterdayParams = {|
  type: 'yesterday',
|};

type PeriodAllTimeParams = {|
  type: 'all_time',
|};

type PeriodParams = PeriodLastParams | PeriodThisParams | PeriodTillYesterdayParams
  | PeriodCustomParams | PeriodYesterdayParams | PeriodAllTimeParams;

type RangeAndLabel = {|
  label: string,
  range: Range,
|};

type CompareMode = 'auto' | '12_months_ago' | Period;

type LegacyCompareMode = CompareMode | Range;

type DateLike = Date | string | number;

type LegacyPeriod = Period | Range;

export type {
  CompareMode,
  DateLike,
  LegacyCompareMode,
  LegacyPeriod,
  Period,
  PeriodAllTimeParams,
  PeriodCustomParams,
  PeriodLastParams,
  PeriodParams,
  PeriodThisParams,
  PeriodTillYesterdayParams,
  PeriodYesterdayParams,
  Range,
  RangeAndLabel,
  Unit,
};
